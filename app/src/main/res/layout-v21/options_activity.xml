<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:grid="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OptionsActivity">

    <fragment
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:name="com.boruminc.borumjot.android.AppBarFragment"
        tools:layout="@layout/appbar_appname_fragment" />

    <com.boruminc.borumjot.android.customviews.OrangeGradientButton
        style="@style/OneSelectButtonGradient"
        android:text="@string/action_change_sign_in"
        android:layout_gravity="center_horizontal"/>

    <GridLayout
        android:id="@+id/color_theme_grid"
        style="@style/ColorThemeGrid">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:gravity="center_horizontal"
            android:layout_column="0"
            android:layout_row="0"
            android:text="@string/cherry_rasbora_title" />

        <ImageView
            android:layout_column="0"
            style="@style/ColorThemeImage"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:gravity="center_horizontal"
            android:layout_column="1"
            android:layout_row="0"
            android:text="@string/golden_toad_title" />

        <ImageView
            android:layout_column="1"
            style="@style/ColorThemeImage"/>
    </GridLayout>

    <Button
        style="@style/OneSelectButtonGradient"
        android:layout_gravity="center_horizontal"
        android:text="@string/action_export_data" />

    <Button
        android:id="@+id/logout_btn"
        android:text="@string/action_logout"
        style="@style/OneSelectButtonGradient"
        android:onClick="onLogoutClick"
    />

</LinearLayout>