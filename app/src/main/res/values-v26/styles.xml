<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="oneSelectButtonGradient" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textSize">@dimen/formcontrol_txtSize</item>
        <item name="android:layout_marginVertical">5dp</item>
        <item name="android:layout_width">@dimen/button_width</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ContactBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:paddingHorizontal">50dp</item>
        <item name="android:background">@color/cherryRasboraPrimarySurface</item>
    </style>

    <style name="FlexibleListBox">
        <item name="android:layout_marginHorizontal">10dp</item>
        <item name="flexWrap">wrap</item>
        <item name="android:buttonStyle">@style/FlexibleListItem</item>
    </style>
</resources>