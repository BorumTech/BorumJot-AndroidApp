<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".NoteActivity">

    <fragment
        android:id="@+id/note_appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:name="com.boruminc.borumjot.android.AppNameAppBarFragment"
        tools:layout="@layout/appbar_appname_fragment" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/note_appbar">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">
                <Button
                    android:layout_height="match_parent"
                    android:text="@string/prompt_share"
                    style="@style/HeaderButton" />
                <Button
                    android:layout_height="match_parent"
                    android:text="@string/prompt_task_delete"
                    style="@style/HeaderButton" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>