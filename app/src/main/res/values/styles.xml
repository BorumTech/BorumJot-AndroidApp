<resources>

    <!-- Base application themes -->
    <style name="CherryRasbora" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/cherryRasboraPrimary</item>
        <item name="colorPrimaryDark">@color/cherryRasboraPrimary</item>
        <item name="colorSecondary">@color/cherryRasboraSecondary</item>
        <item name="colorSecondaryVariant">@color/cherryRasboraSecondaryVariant</item>
        <item name="colorAccent">@color/cherryRasboraAccent</item>
        <item name="colorSurface">@color/cherryRasboraBackgroundSurface</item>
        <item name="colorOnPrimarySurface">@color/cherryRasboraPrimarySurface</item>
        <item name="android:windowBackground">?attr/colorOnPrimarySurface</item>
        <item name="android:editTextStyle">@style/FormInputFields</item>
        <item name="actionOverflowMenuStyle">@style/OverflowMenu</item>
        <item name="actionOverflowButtonStyle">@style/OverflowButton</item>
    </style>

    <!-- Base Styles -->
    <style name="ActionButtonListItem" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#000000</item>
        <item name="android:gravity">start</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/action_btn_margin</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="TextButtonListItem" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">start</item>
        <item name="android:paddingTop">@dimen/text_button_padding</item>
        <item name="android:paddingBottom">@dimen/text_button_padding</item>
    </style>

    <!-- Individual View styles -->
    <style name="FormInputFields" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">@dimen/formcontrol_txtSize</item>
    </style>

    <style name="OneSelectButtonGradient" parent="ActionButtonListItem">
        <item name="android:textSize">@dimen/formcontrol_txtSize</item>
        <item name="android:layout_marginTop">25dp</item>
        <item name="android:layout_marginBottom">25dp</item>
        <item name="android:layout_width">@dimen/button_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="ActionButtonListItem.First">
        <item name="android:layout_marginTop">@dimen/action_btn_margin</item>
    </style>

    <style name="HeaderButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_width">@dimen/header_btn_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="backgroundTint">?attr/colorSurface</item>
    </style>

    <style name="ShareField" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:layout_width">@dimen/button_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:textSize">19sp</item>

    </style>

    <style name="ShareeList">
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="NoteArea" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:padding">12dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">top</item>
    </style>

    <style name="Legal.PrivacyPolicy" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">20sp</item>
        <item name="lineHeight">10pt</item>
    </style>

    <style name="ContactBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">50dp</item>
        <item name="android:paddingRight">50dp</item>
        <item name="android:background">@color/cherryRasboraAccent</item>
    </style>

    <style name="ContactBarItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="ContactBarItemButton" parent="ContactBarItem">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="ContactBarLabel" parent="ContactBarItem">
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:textSize">12pt</item>
    </style>

    <style name="ColorThemeGrid">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">4dp</item>
        <item name="android:columnCount">2</item>
        <item name="android:rowCount">2</item>
        <item name="android:rowOrderPreserved">false</item>
        <item name="android:useDefaultMargins">true</item>
        <item name="android:alignmentMode">alignBounds</item>
    </style>

    <style name="ColorThemeImage">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">200dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_row">1</item>
    </style>

    <style name="FlexibleListBox" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="flexWrap">wrap</item>
    </style>

    <style name="Legal.PrivacyPolicy.CheckedTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginStart">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginTop">@dimen/activity_vertical_margin</item>
        <item name="android:layout_marginBottom">@dimen/activity_vertical_margin</item>
        <item name="android:drawableLeft">?android:attr/listChoiceIndicatorMultiple</item>
        <item name="android:drawableStart">?android:attr/listChoiceIndicatorMultiple</item>
        <item name="android:textSize">@dimen/chkbox_txtSize</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="SupportTheme" parent="CherryRasbora">
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="PlusFloatingActionBtn" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="android:layout_width">@dimen/floating_action_btn_size</item>
        <item name="android:layout_height">@dimen/floating_action_btn_size</item>
        <item name="android:layout_margin">24dp</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentEnd">true</item>
    </style>

    <style name="FilterButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_width">@dimen/header_btn_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="strokeWidth">4dp</item>
        <item name="strokeColor">?attr/colorPrimary</item>
        <item name="backgroundTint">?attr/colorSurface</item>
    </style>

    <style name="SubtaskList" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:stretchColumns">1</item>
    </style>

    <style name="ChangeSignInEditText">
        <item name="android:layout_width">@dimen/change_sign_in_field_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="DueDateRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">8dp</item>
    </style>

    <style name="DueDateLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="JottingListItem">
        <item name="android:activatedBackgroundIndicator">@color/cherryRasboraPrimarySurface</item>
    </style>

    <style name="OverflowMenu" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="overlapAnchor">false</item>
        <item name="android:dropDownVerticalOffset">4.0dip</item>
    </style>

    <style name="OverflowButton" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@android:color/white</item>
    </style>


</resources>
