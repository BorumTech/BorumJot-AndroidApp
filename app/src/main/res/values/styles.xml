<resources>

    <!-- Base application themes -->
    <style name="CherryRasbora" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/cherryRasboraPrimary</item>
        <item name="colorSecondary">@color/cherryRasboraSecondary</item>
        <item name="colorAccent">@color/cherryRasboraAccent</item>
        <item name="colorSurface">@color/cherryRasboraBackgroundSurface</item>
        <item name="colorOnPrimarySurface">@color/cherryRasboraPrimarySurface</item>
        <item name="editTextStyle">@style/FormInputFields</item>
    </style>

    <style name="GoldenToad" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/goldenToadPrimary</item>
        <item name="colorSecondary">@color/goldenToadSecondary</item>
        <item name="colorAccent">@color/goldenToadAccent</item>
        <item name="colorSurface">@color/goldenToadBackgroundSurface</item>
        <item name="colorOnPrimarySurface">@color/goldenToadPrimarySurface</item>
    </style>

    <!-- Individual View styles -->
    <style name="FormInputFields" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">@dimen/formcontrol_txtSize</item>
    </style>

    <style name="OneSelectButtonGradient" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/formcontrol_txtSize</item>
        <item name="android:layout_marginTop">50dp</item>
        <item name="android:layout_width">@dimen/button_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/cherryRasboraAccent</item>
    </style>

    <style name="HeaderButton" parent="TextAppearance.AppCompat.Button">
        <item name="android:layout_width">@dimen/header_btn_width</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:textColor">?attr/colorAccent</item>
        <item name="android:background">@drawable/header_button</item>
    </style>

    <style name="ShareField" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:layout_width">@dimen/button_width</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">40dp</item>
    </style>

    <style name="NoteArea" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:padding">12dp</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Legal.PrivacyPolicy" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">20sp</item>
        <item name="lineHeight">10pt</item>
    </style>

    <style name="ContactBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:paddingLeft">50dp</item>
        <item name="android:paddingRight">50dp</item>
        <item name="android:background">@color/cherryRasboraAccent</item>
    </style>

    <style name="ContactBarItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ContactBarItemButton" parent="ContactBarItem">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentEnd">true</item>
    </style>

    <style name="ContactBarLabel" parent="ContactBarItem">
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:textSize">12pt</item>
    </style>

    <style name="ColorThemeGrid">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">4dp</item>
        <item name="android:columnCount">2</item>
        <item name="android:rowCount">2</item>
        <item name="android:rowOrderPreserved">false</item>
        <item name="android:useDefaultMargins">true</item>
        <item name="android:alignmentMode">alignBounds</item>
    </style>

    <style name="ColorThemeImage">
        <item name="android:layout_width">wrap_content</item>0
        <item name="android:layout_height">100dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_row">1</item>
        <item name="android:src">@android:drawable/alert_light_frame</item>
    </style>

</resources>
